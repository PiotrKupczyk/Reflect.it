<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                  android:layout_height="wrap_content">


    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/mirror_image"
            android:id="@+id/widgetImage"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="TextView"
            android:layout_width="310dp"
            android:id="@+id/widgetName"
            app:layout_constraintTop_toTopOf="@+id/widgetImage"
            app:layout_constraintBottom_toBottomOf="@+id/widgetImage"
            android:layout_height="75dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/widgetImage"
            android:layout_marginStart="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>