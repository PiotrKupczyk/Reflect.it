<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="56dp">


    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/widgetName"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/widgetImage"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/widgetImage"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/widgetImage"
            android:fontFamily="@font/avenir_pro_demi"
            android:textSize="20sp"
            android:layout_marginTop="8dp"/>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_mirror"
            android:id="@+id/widgetImage"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="72dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>